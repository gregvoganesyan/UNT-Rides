<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head') %>
<body>
    <%- include('includes/header') %>

    <main>
        <div class="split-container">
            <div class="editrideblank "></div>
            <div class="makeAPost">
                <div class="container-center" style="margin-top: -40px">
                    <h3 class="subheading">Edit Ride</h3>

                    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                        <% errors.forEach(error => { %>
                            <div class="errlist"><%= error %></div>
                        <% }) %>
                    <% } %>

                    <div class="box">
                        <div class="innerboxes">
                            <form id="editForm" action="/edit-post/<%=post.id%>" method="POST">
                                <label class="greenboxtextPost" for="rideTo">To:</label>
                                <input class="inputfield" type="text" id="rideTo" name="rideTo" value="<%= post.rideTo %>" required />

                                <label class="greenboxtextPost" for="rideFrom">From:</label>
                                <input class="inputfield" type="text" id="rideFrom" name="rideFrom" value="<%= post.rideFrom %>" required />

                                <label class="greenboxtextPost" for="rideDate">Date:</label>
                                <input class="inputfield" type="date" id="rideDate" name="rideDate" min="<%= new Date().toISOString().split('T')[0] %>" onkeydown="return false" value="<%= post.rideDate %>" required />

                                <label class="greenboxtextPost" for="rideTime">Time:</label>
                                <input class="inputfield" type="time" id="rideTime" name="rideTime" onkeydown="return false" value="<%= post.rideTime %>" required />

                                <label class="greenboxtextPost" for="fare">Fare:</label>
                                <input class="inputfield" type="number" id="fare" name="fare" placeholder="0.00" min="0" step="0.01" value="<%= post.fare %>" required />
                            </form>
                        </div>
                    </div>

                    <div class="postRideSubmit">
                        <button type="submit" form="editForm">Confirm Changes</button>
                    </div>
                </div>
            </div>
            <div class="blankSection"></div>
        </div>
    </main>

</body>
</html>