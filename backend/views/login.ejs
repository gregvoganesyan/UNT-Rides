<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head') %>
<body>
    <%- include('includes/header') %>
    <main>
    <div class="container-center">
      <h3 class="subheading">Log In</h3>

      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <% errors.forEach(error => { %>
          <div class="errlist"><%= error %></div>
        <% }) %>
      <% } %>

      <div class="boxLogin" role="region" aria-label="login form">
        <div class="innerboxes">
          <form id="loginForm" action="/login" method="POST" novalidate>
            <input class="inputfield" type="text" name="username" placeholder="Username" autocomplete="off" required />
            <input class="inputfield" type="password" name="password" placeholder="Password" autocomplete="off" required />
            <a href="/forgot-password" class="forgot">Forgot password?</a>

          </form>
        </div>
      </div>

      <div class="submit">
        <button type="submit" form="loginForm">Log In</button>
      </div>

      <p class="paragraphtxt">
        Don't have an account? <a href="/signup">Sign Up</a>
      </p>
    </div>
  </main>
</body>
</html>
