<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head') %>
<body>
    <%- include('includes/header') %>

    <main>
        <form action="/create-post" method="POST">

            <h2>Post A Ride</h2>

            <% errors.forEach(error => { %>
                <p class="notice"><%= error %></p>
            <% }) %>
            <fieldset>
                <legend><%=user.username%></legend>

                <label for="rideTo"><small>To: </small></label>
                <input type="text" id="rideTo" name="rideTo" required>

                <label for="rideFrom"><small>From: </small></label>
                <input type="text" id="rideFrom" name="rideFrom" required>

                <label for="rideDate"><small>Date</small></label>
                <input type="date" id="rideDate" min="<%= new Date().toISOString().split('T')[0] %>" onkeydown="return false" name="rideDate" required>

                <label for="rideTime"><small>Time</small></label>
                <input type="time" id="rideTime" name="rideTime" onkeydown="return false" required>   

                <label for="fare"><small>Fare</small></label>
                <input type="number" id="fare" name="fare"  min="0" step="0.01" required>
                <br />

                <button type="submit">Post Ride</button>
            </fieldset>
        </form>
    </main>


    <%- include('includes/footer') %>
    
</body>
</html>